<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GithubUser" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_secondary</item>
        <item name="colorSecondaryVariant">@color/blue_light</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextContentCard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blue_primary</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="TextContentCard.Title">
        <item name="android:textSize">20sp</item>
        <item name="maxLines">1</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="TextContentCard.TitleDetail">
        <item name="android:textSize">32sp</item>
        <item name="maxLines">2</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:layout_marginStart">0dp</item>
    </style>

    <style name="TextContentCard.Subtitle">
        <item name="android:textSize">16sp</item>
        <item name="maxLines">1</item>
    </style>

    <style name="TextContentCard.SubtitleDetail">
        <item name="android:textSize">18sp</item>
        <item name="maxLines">2</item>
        <item name="android:layout_marginStart">0dp</item>
    </style>

    <style name="TextContentCard.Small">
        <item name="android:textSize">10sp</item>
        <item name="maxLines">1</item>
    </style>

    <style name="TextContentCard.Large">
        <item name="android:textSize">24sp</item>
        <item name="maxLines">1</item>
    </style>
</resources>